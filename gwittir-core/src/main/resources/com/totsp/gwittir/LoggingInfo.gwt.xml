<?xml version="1.0" encoding="UTF-8"?>

<module>
    <!-- Inherit the core Web Toolkit stuff.                  -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='com.totsp.gwittir.LoggingService'/>
    <source path="client" />
    <define-property name="log.level" values="info" />
    <property-provider name="log.level">
        <![CDATA[
	return "info";
	]]>
    </property-provider>
    
    <replace-with 
        class="com.totsp.gwittir.mvc.log.rebind.InfoLogger">
        <when-type-is 
            class="com.totsp.gwittir.mvc.log.Logger" />
        <when-property-is name="log.level" value="info"/>
    </replace-with>
</module>